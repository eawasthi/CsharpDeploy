<h1>Plan Your Wedding <a href="/AllWeddings">Dashboard</a> <a href="/logout">Log Out</a></h1>
<div>
    @{
        foreach(var error in @ViewBag.Errors)
        {
            //If there are any errors for a field...
            if(@error.Errors.Count > 0)
            {
                // We show the first error for that field
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>

<div class="CreateWedding">
<form action="/savewedding" method="post">
<div class="form-group">
<label for="WeddingOne">Wedder One: </label>
<input type="text" class="form-control" id="WeddingOne" name="WeddingOne">
</div>
<div class="form-group">
<label for="WeddingTwo">Wedder Two: </label>
<input type="text" class="form-control" id="WeddingTwo" name="WeddingTwo">
</div>
<div class="form-group">
<label for="Date">Date: </label>
<input type="date" class="form-control" id="Date" name="Date">
</div>
<div class="form-group">
<label for="WeddingAddress">Wedding Address: </label>
<input type="text" class="form-control" id="WeddingAddress" name="WeddingAddress">
</div>
<input type="submit" value="Create">
</form>
</div>